{% extends 'layout.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
    <h2>{{ article.title }}</h2>
    <p>{{ article.content }}</p>
    <h3>Comments</h3>
    {% for comment in comments %}
        <p>
        <strong>{{ comment.author }}</strong> said : {{ comment.content }}<br>
    {% else %}
        Aucun commentaire. En laisser un ?
    {% endfor %}
    </p>
{% endblock %}